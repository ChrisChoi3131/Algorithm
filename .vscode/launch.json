{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "python",
      "name": "Python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      // "preLaunchTask": "python execute"
    },
    {
      "name": "JavaScript",
      "program": "${file}",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "TypeScript",
      "program": "${file}",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/out/**/*.js"]
    },    
    {
      "type": "lldb",
      "request": "launch",
      "name": "C++ debug",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "C++ bulid for clang++"
    }
  ]
}
